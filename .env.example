# Voice to Text - Configuration
# Copy this to .env and customize your settings

# OpenAI API Configuration
OPENAI_API_KEY=your_api_key_here
API_TIMEOUT=30

# Audio Device Configuration
AUDIO_DEVICE_ID=65
SAMPLE_RATE=96000

# Audio Processing Settings
# Gain boost in dB (0-20, recommended 6-12 for quiet audio)
AUDIO_BOOST=6.0

# Loudness normalization (true/false, recommended true)
AUDIO_NORMALIZE=true

# Hotkey Configuration
# Format: modifier+modifier+key
# Modifiers: ctrl, shift, alt, alt_gr
# Examples: "ctrl+shift+r", "alt+s", "ctrl_r+alt_gr"
HOTKEY=ctrl_r+alt_gr

# Custom Vocabulary Path (optional)
# Path to file with comma-separated custom words
VOCABULARY_FILE=vocabulary.txt

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=outputs/windows.log

# Application Settings
VERBOSE=false
